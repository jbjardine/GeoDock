MODE=remote

# Server DNS name (also used to generate a self-signed certificate if no certs are mounted)
# Use an internal FQDN (avoid .local): e.g. geodock.intra
SERVER_NAME=geodock.intra

# Upstreams
UPSTREAM_BAN=https://api-adresse.data.gouv.fr
UPSTREAM_HOST=api-adresse.data.gouv.fr

# Host ports (defaults 80/443)
HOST_PORT_HTTP=80
HOST_PORT_HTTPS=443

# TLS protocols
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
UPSTREAM_SSL_PROTOCOLS=TLSv1.3

# Fallback behavior
FALLBACK_ON_404=false

# Redirect HTTP (80) to HTTPS (443)
# Default is disabled (TLS bridge mode: HTTP accepted, upstream over HTTPS).
# Set to true for strict HTTPS-only deployments.
REDIRECT_HTTP_TO_HTTPS=false

# Expose /_health on HTTP (80)
# Default true. Set to false to also redirect /_health to HTTPS
EXPOSE_HEALTH_ON_HTTP=true
